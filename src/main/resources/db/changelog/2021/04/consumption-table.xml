<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<databaseChangeLog
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">

    <changeSet id="2021-18-04-21-40" author="Sergei Golivkin">
        <comment>create table "consumption"</comment>
        <createTable tableName="consumption">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints nullable="false" unique="true"/>
            </column>
            <column name="product_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="consumption_quantity" type="INT">
                <constraints nullable="false"/>
            </column>
            <column name="consumption_price" type="INT">
                <constraints nullable="false"/>
            </column>
            <column name="consumption_date" type="DATETIME">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <addForeignKeyConstraint baseTableName="consumption"
                                 baseColumnNames="product_id"
                                 constraintName="fk_consumption_product_id"
                                 referencedTableName="product"
                                 referencedColumnNames="id"/>
    </changeSet>
</databaseChangeLog>